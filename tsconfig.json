{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "sourceMap": false,
    "jsx": "react",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src"]
}
